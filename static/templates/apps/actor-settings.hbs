<form autocomplete="off" onsubmit="event.preventDefault();">

    {{#if displays.size}}
    <div class="form-group">
        <label>{{localize "CONFIGURE.CalcTokenSize"}}</label>
        <input type="checkbox" name="system.autoCalc.size" data-dtype="Boolean" {{checked object.system.autoCalc.size}}>
    </div>
    {{/if}}
    
    {{#if displays.movement}}
    <div class="form-group">
        <label>{{localize "CONFIGURE.CalcRun"}}</label>
        <input type="checkbox" name="system.autoCalc.run" data-dtype="Boolean" {{checked object.system.autoCalc.run}}>
    </div>

    
    <div class="form-group">
        <label>{{localize "CONFIGURE.CalcWalk"}}</label>
        <input type="checkbox" name="system.autoCalc.walk" data-dtype="Boolean" {{checked object.system.autoCalc.walk}}>
    </div>
    {{/if}}

    
    {{#if displays.wounds}}
    <div class="form-group">
        <label>{{localize "CONFIGURE.CalcWounds"}}</label>
        <input type="checkbox" name="system.autoCalc.wounds" data-dtype="Boolean" {{checked object.system.autoCalc.wounds}}>
    </div>
    {{/if}}

    
    {{#if displays.critwounds}}
    <div class="form-group">
        <label>{{localize "CONFIGURE.CalcCritWounds"}}</label>
        <input type="checkbox" name="system.autoCalc.criticals" data-dtype="Boolean" {{checked object.system.autoCalc.criticals}}>
    </div>
    {{/if}}

    
    {{#if displays.corruption}}
    <div class="form-group">
        <label>{{localize "CONFIGURE.CalcCorruption"}}</label>
        <input type="checkbox" name="system.autoCalc.corruption" data-dtype="Boolean" {{checked object.system.autoCalc.corruption}}>
    </div>
    {{/if}}

    
    {{#if displays.encumbrance}}
    <div class="form-group">
        <label>{{localize "CONFIGURE.CalcMaxEnc"}}</label>
        <input type="checkbox" name="system.autoCalc.encumbrance" data-dtype="Boolean" {{checked object.system.autoCalc.encumbrance}}>
    </div>
    {{/if}}

    {{#if displays.equipPoints}}
    <div class="form-group">
        <label>{{localize "CONFIGURE.EquipPoints"}}</label>
        <input style="flex: unset; width: 30px" type="number" name="flags.equipPoints" data-dtype="Number" value={{object.equipPointsAvailable}}>
    </div>
    {{/if}}

    {{#if displays.mainHand}}
    <div class="form-group">
        <label>{{localize "CONFIGURE.MainHand"}}</label>
        <select name="system.details.mainHand" data-dtype="String">
            {{#select object.details.mainHand}}
            <option value="r">{{localize "Right"}}</option>
            <option value="l">{{localize "Left"}}</option>
            {{/select}}
        </select>
    </div>
    {{/if}}
    
    
    {{#if displays.hitloc}}
    <div class="form-group">
        <label>{{localize "Hit Location Table"}}</label>
        <select name="system.details.hitLocationTable.value" data-dtype="String">
            {{#select object.details.hitLocationTable.value}}
            {{#each tables as |table key|}}
            <option value="{{key}}">{{table}}</option>
            {{/each}}
            {{/select}}
        </select>
    </div>
    {{/if}}

    {{#if displays.vehicle}}
    <header class="form-header">
        <h3>{{localize "Vehicle Settings"}}</h3>
    </header>

    <div class="form-group">
        <label>{{localize "VEHICLE.Type"}}</label>
        <select name="system.vehicleType">
            {{#select object.system.vehicleType}}
            {{#each (config "vehicleTypes")}}
                <option value="{{@key}}">{{this}}</option>
            {{/each}}
            {{/select}}
        </select>
    </div>
    <div class="form-group">
        <label>{{localize "VEHICLE.MoraleEffects"}}</label>
        <input type="checkbox" name="system.status.morale.transferEffects" {{checked object.system.status.morale.transferEffects}}>
    </div>

    {{/if}}
    <button type="submit" name="submit">{{localize "Submit"}}</button>
</form>
    